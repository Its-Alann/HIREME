rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{document=**} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.token.email in resource.data.authors
    }
     match /userProfiles/{document=**} {
      allow read, write: if request.auth != null;
    }
     match /network/{document=**} {
      allow read, write: if request.auth != null;
    }
      match /invitations/{document=**} {
      allow read, write: if request.auth != null;
    }
    	match /companies/{document=**} {
      allow read, create, update: if request.auth != null;
    }
    	match /recruiters/{document=**} {
      allow read, create, update: if request.auth != null;
    }
    	match /jobs/{document=**} {
      allow read, create, update: if request.auth != null;
    }
    // match /{document=**} {
    //   allow read, write, update;
    // }
  }
}